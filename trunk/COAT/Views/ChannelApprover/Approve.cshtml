@model COAT.Models.Deal
@using COAT.ViewModel.Shared;
@{
    ViewBag.Title = "Approve";
}
<h2>
    @ViewBag.Title</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.Partial("_DealPartial", new DealViewModel { Deal = Model, IsEditIndustry2 = true })
    @Html.Partial("_CustomerPartial", new CustomerViewModel { Customer = Model.Customer })
    @Html.Partial("_PartnerPartial", Model.Partner)
    <hr />
    @Html.Partial("_ApproveHistoriesPartial", Model.ApprovalHistories)
    <hr />
    @Html.Partial("_DealProductsPartial", new DealProductsViewModel { DealProducts = Model.DealProducts, IsShowAssign = true, IsShowWrong = false, CurrentStatusActionName = "PCA", ApproveHeaderType = ApproveHeaderType.Approve })
    <div class="clear">
    </div>
    <input type="submit" value="Submit" /> 
    
}
